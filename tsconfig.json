{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@app/*": [
        "*"
      ]
    },
    "target": "es5",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "declaration": true,
    "declarationMap": true
  },
  "files": [
    "src/index.ts"
  ],
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "./node_modules",
    "./dist"
  ]
}